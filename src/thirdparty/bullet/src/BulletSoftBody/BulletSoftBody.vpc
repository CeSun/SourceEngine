//---------------------------------------------------------------------------------------------
// BulletSoftBody
// 
// StaticLibrary Project Script
//---------------------------------------------------------------------------------------------
$Macro SRCDIR		    "..\..\..\.."
$Macro OUTLIBDIR        "$LIBPUBLIC"

$Include "$SRCDIR\vpc_scripts\source_lib_base.vpc"


$Configuration "Debug"
{
    $Compiler
    {
        $PreprocessorDefinitions                "_DEBUG"
    }
}

$Configuration "Release"
{
    $General
    {
        $WholeProgramOptimization                "Use Link Time Code Generation"
    }

    $Compiler
    {
        $PreprocessorDefinitions                "NDEBUG"
        $AdditionalOptions                "/d2Zi+"
    }
}

$Configuration
{
    $General
    {
        $ConfigurationType                "Static Library (.lib)"
        $CharacterSet                "Use Multi-Byte Character Set"
    }

    $Compiler
    {
        $WarningLevel                "Level 3 (/W3)"
        $AdditionalIncludeDirectories                "..\"
        $PreprocessorDefinitions                "WIN32;_CRT_SECURE_NO_WARNINGS;_CRT_SECURE_NO_DEPRECATE;_SCL_SECURE_NO_WARNINGS"
    }
}


$Project "BulletSoftBody"
{
    $Folder "Source Files"
    {
        $File "btDefaultSoftBodySolver.cpp"
        $File "btSoftBody.cpp"
        $File "btSoftBodyConcaveCollisionAlgorithm.cpp"
        $File "btSoftBodyHelpers.cpp"
        $File "btSoftBodyRigidBodyCollisionConfiguration.cpp"
        $File "btSoftRigidCollisionAlgorithm.cpp"
        $File "btSoftRigidDynamicsWorld.cpp"
        $File "btSoftSoftCollisionAlgorithm.cpp"
    }

    $Folder "Header Files"
    {
        $File "btDefaultSoftBodySolver.h"
        $File "btSoftBody.h"
        $File "btSoftBodyConcaveCollisionAlgorithm.h"
        $File "btSoftBodyData.h"
        $File "btSoftBodyHelpers.h"
        $File "btSoftBodyInternals.h"
        $File "btSoftBodyRigidBodyCollisionConfiguration.h"
        $File "btSoftBodySolvers.h"
        $File "btSoftBodySolverVertexBuffer.h"
        $File "btSoftRigidCollisionAlgorithm.h"
        $File "btSoftRigidDynamicsWorld.h"
        $File "btSoftSoftCollisionAlgorithm.h"
        $File "btSparseSDF.h"
    }
}

